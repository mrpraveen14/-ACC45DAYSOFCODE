// area and perimeter of circle. 

#include<stdio.h>
//#define pi 3.14;
void ap(int , float *, float *);
int main(){
    int radius;
    float area,perimeter;
    printf("Enter the radius : ");
    scanf("%d",&radius);
    ap(radius, &area, &perimeter);
    printf("Area : %f\n", area);
    printf("Perimeter : %f\n",perimeter);
    return 0;
}
void ap(int r, float *a, float *p){
    *a=3.14*r*r;
    *p = 2*3.14*r;

}
