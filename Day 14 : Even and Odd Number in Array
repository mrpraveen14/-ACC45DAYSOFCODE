// Day 14 : Even and Odd Number in Array 

#include <stdio.h>
#define max 100

int main()
{
    int a[max], size;
    printf("Enter the size of array : ");
    scanf("%d", &size);
    printf("Enter element in array : ");

    for (int i = 0; i < size; i++)
    {
        scanf("%d", &a[i]);
    }
    printf("Array : ");
     for(int i =0; i<size; i++){
        printf("%d ,",a[i]);
    }


    printf("\n Even numbers are : ");
    for (int i = 0; i <size; i++)
    {
        if (a[i] % 2 == 0)
        {
            printf("%d ,", a[i]);
        }
    }
    printf("\n ");
    printf("Odd numbers are : ");
    for (int i = 0; i <size; i++)
    {
        if (a[i] % 2 == 1)
        {
            printf("%d ,", a[i]);
        }
    }
    return 0;
}
